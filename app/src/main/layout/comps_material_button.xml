<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt01"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="默认"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="圆角"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity=""
        android:text="圆角-描边"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:strokeColor="#ff0000"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text="圆角-描边"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:icon="@android:drawable/star_on"
        app:iconGravity="textStart"
        app:iconPadding="30dp"
        app:iconTint="#ff0000"
        app:strokeColor="#ff0000"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text="圆角-描边"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:icon="@android:drawable/star_on"
        app:iconGravity="textEnd"
        app:iconPadding="30dp"
        app:iconTint="#ff0000"
        app:strokeColor="#ff0000"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/btn_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_01"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="tab01"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_02"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_700"
            android:text="tab02"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_03"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_200"
            android:text="tab03"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_04"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:text="tab04"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="15dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_05"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/purple_500"
        android:text="tab04"
        android:textColor="@color/white"
        app:strokeColor="#ff0000"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="12sp"
        app:cornerRadius="999dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/purple_700"
        android:drawableLeft="@android:drawable/star_on"
        android:drawableTop="@android:drawable/star_on"
        android:drawableRight="@android:drawable/star_on"
        android:drawableBottom="@android:drawable/star_on"
        android:drawableTint="@color/purple_500"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:text="11111111111111111111111111111111111111111111111111111111111111111111111111111111"
        android:textColor="@color/white" />


</LinearLayout>