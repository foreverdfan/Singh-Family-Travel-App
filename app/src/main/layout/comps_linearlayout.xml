<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  线性布局  -->
    <!--   android:orientation="vertical 在垂直方向上依次排开  -->
    <!--  mac = command +/ 添加注释  -->
    <!--gravity 决定子空间相对父控件容器的位置 -->
    <!--    -->
    <!--  android:gravity="center_horizontal" 使得子view 在水平方向上居中显示 -->
    <!--  android:gravity="center_vertical"  使得子view 在垂直方向居中显示 -->
    <!--  android:gravity="center"  使得子view 在水平和垂直方向同时居中显示  -->

    <!-- layout_gravity 决定子控件相对它的父容器的位置   -->
    <!--  android:layout_gravity="center_vertical"   如果对齐方式和orientation 一直，则失效-->

    <!--  weight 则是 按比例分配 orientation方向的 高度或者宽度 -->
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:backgroundTint="#ff0000" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:backgroundTint="#00ff00" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:backgroundTint="#0000ff" />

</LinearLayout>